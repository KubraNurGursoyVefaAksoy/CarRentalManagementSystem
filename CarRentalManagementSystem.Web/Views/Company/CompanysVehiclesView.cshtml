@model IEnumerable<CarRental.Models.Concretes.Vehicles>

@{
    ViewBag.Title = "Araçlar";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Yeni Araç Ekle", "AddVehicleToCompany")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Encode("Aracın Adı")
        </th>
        <th>
            @Html.Encode("Aracın Modeli")
        </th>
        <th>
            @Html.Encode("Aracın Şu Anki Kilometresi")
        </th>
        <th>
            @Html.Encode("Aracın Bagaj Hacmi")
        </th>
        <th>
            @Html.Encode("Aracın Oturma Kapasitesi")
        </th>
        <th>
            @Html.Encode("Bu Araç İçin Gereken Ehliyet Yaşı")
        </th>
        <th>
            @Html.Encode("Aracın Hava Yastığı Var Mı")
        </th>
        <th>
            @Html.Encode("Aracın Günlük Km Sınırı")
        </th>
        <th>
            @Html.Encode("Aracın Günlük Kiralanma Ücreti")
        </th>
        <th>
            @Html.Encode("Bu Aracı Sürebilmek İçin Gereken Yaş Sınırı")
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiclesInstantKm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrunkVolume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatingCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDrivingLicenseAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KmLimitPerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAirbag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DailyRentalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeLimitForDrivingThisCar)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "UpdateVehicleToCompany", new { id = item.VehicleId }) |
                @Html.ActionLink("Delete", "DeleteVehicleFromCompany", new { id = item.VehicleId })
            </td>
        </tr>
    }

</table>