@model CarRental.Models.Concretes.Companies

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Şirket Kayıt</title>
    <link rel="stylesheet" href="~/Contents/LogInAndSignUpCSS.css">

</head>
<body>
    @using (Html.BeginForm("SignUpAsCompany", "Company", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="modal-content animate">
            <div class="container">

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.CompanyName, "Şirket İsmi", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şirketinizin İsmini Giriniz*", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.CompanyEmail, "E-Mail", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şirketinizin E-Mailini Giriniz*", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CompanyEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.CompanyPassword, "Şifre", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şirketinizin Şifresini Giriniz*", @type = "Password", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CompanyPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.CompanyCity, "Şehir", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyCity, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şirketinizin Şehrini Giriniz*", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CompanyCity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.CompanyAdress, "Adres", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CompanyAdress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şirketinizin Adresini Giriniz*", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CompanyAdress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input type="submit" name="SignUp" value="Kaydol" />
            </div>
        </div>
    }
</body>
</html>
