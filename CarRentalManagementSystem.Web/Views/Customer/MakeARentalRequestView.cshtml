@model CarRental.Models.Concretes.RentalRequests

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kiralama Talebi Oluştur</title>
    <link rel="stylesheet" href="~/Contents/LogInAndSignUpCSS.css">

</head>
<body>
    @using (Html.BeginForm("MakeARentalRequestView", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="modal-content animate">
            <div class="container">
                @Html.LabelFor(model => model.RequestedPickUpDate, "Kiralama Başlangıcı", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="date" name="RequestedPickUpDate" required />
                @Html.EditorFor(model => model.RequestedPickUpDate, new { htmlAttributes = new { @class = "form-control datepicker", @id = "RequestedPickUpDate" } })


                @Html.LabelFor(model => model.RequestedDropOffDate, "Kiralama Bitişi", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="date" name="RequestedDropOffDate" required />
                @Html.EditorFor(model => model.RequestedDropOffDate, new { htmlAttributes = new { @class = "form-control datepicker", @id = "RequestedDropOffDate" } })

                <input type="submit" name="MakeRequest" value="Oluştur" />
            </div>
        </div>
    }
</body>
</html>
