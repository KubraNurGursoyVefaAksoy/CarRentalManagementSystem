@model CarRental.Models.Concretes.Employees

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Çalışan Kayıt</title>
    <link rel="stylesheet" href="~/Contents/LogInAndSignUpCSS.css">

</head>
<body>
    @using (Html.BeginForm("SaveEmployeeToCompany", "Company", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="modal-content animate">
            <div class="container">

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.EmployeesEmail, "E-Mail", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmployeesEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Çalışanın E-Mailini Giriniz*", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.EmployeesEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.EmployessPassword, "Şifre", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmployessPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Çalışanın Şifresini Giriniz*", @type = "Password", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.EmployessPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.EmployeesAddress, "Adres", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmployeesAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Çalışanın Adresini Giriniz*", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.EmployeesAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b> @Html.LabelFor(model => model.EmployeesPhoneNumber, "Telefon Numarası", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmployeesPhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Çalışanın Telefon Numarasını Giriniz*: 500 000 00 00", @pattern = "[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.EmployeesPhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>


                <input type="submit" name="SignUp" value="Kaydol" />
            </div>
        </div>
    }
</body>
</html>